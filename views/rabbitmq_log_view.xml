<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_rabbitmq_log_search" model="ir.ui.view">
        <field name="name">rabbitmq_log.search</field>
        <field name="model">rabbitmq.log</field>
        <field name="arch" type="xml">
            <search string="Search Attendance Log">
                <field name="record_id"/>
                <field name="queue_name"/>
                <field name="data"/>
                <field name="error"/>
                <field name="operation"/>
                <separator/>
                <filter name="operation" string="Check In" domain="[('operation', '=', 'create')]"/>
                <filter name="operation" string="Check Out" domain="[('operation', '=', 'write')]"/>
                <separator/>
                <filter name="state" string="New State" domain="[('state', '=', 'new')]"/>
                <filter name="state" string="Fail State" domain="[('state', '=', 'fail')]"/>
                <filter name="state" string="Success State" domain="[('state', '=', 'success')]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Operation Type" name="operation" domain="[]" context="{'group_by': 'operation'}"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Model" name="model_name" domain="[]" context="{'group_by': 'model_name'}"/>
                    <separator/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_rabbitmq_log_view" model="ir.actions.act_window">
        <field name="name">Attendance Records</field>
        <field name="res_model">rabbitmq.log</field>
        <field name="search_view_id" ref="rabbitmq_model_sync.view_rabbitmq_log_search"/>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Attendance Records
            </p>
        </field>
    </record>


    <record id="view_rabbitmq_log_list" model="ir.ui.view">
        <field name="name">rabbitmq.log.list</field>
        <field name="model">rabbitmq.log</field>
        <field name="arch" type="xml">
            <list string="Attendance Sync Logs" sample="1">
                <field name="record_id" optional="show"/>
                <field name="model_name" optional="show"/>
                <field name="queue_name" optional="show"/>
                <field name="data" optional="show"/>
                 <field name="operation" optional="show"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'success'"
                       decoration-info="state == 'new'" decoration-danger="state == 'fail'"/>
            </list>
        </field>
    </record>

    <record id="view_rabbitmq_log_form" model="ir.ui.view">
        <field name="name">rabbitmq.log.form</field>
        <field name="model">rabbitmq.log</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Retry" name="process_odoo_operation" invisible="state == 'success'" type="object"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="record_id" readonly="state=='success'"/>
                            <field name="model_name" readonly="state=='success'"/>
                            <field name="operation" readonly="state=='success'"/>
                        </group>
                        <group>
                            <field name="queue_name" readonly="True"/>
                            <field name="data" widget="jsonb" readonly="1"/>
                            <field name="error" readonly="state=='success'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <data>

        <menuitem id="rabbitmq_attendance_sync_menu_item"
                  action="rabbitmq_model_sync.action_rabbitmq_log_view"
                  parent="rabbitmq_model_sync.rabbitmq_attendence_sync_menu_root"
                  name="Attendance Records" sequence="10"/>
    </data>
</odoo>
