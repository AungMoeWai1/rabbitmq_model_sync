<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_attendance_sync_log_view" model="ir.actions.act_window">
        <field name="name">Attendance Records</field>
        <field name="res_model">attendance.sync.log</field>
        <!--        <field name="search_view_id" ref="healthcare.view_healthcare_labs_search"/>-->
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Attendance Records
            </p>
        </field>
    </record>


    <record id="view_attendance_sync_log_list" model="ir.ui.view">
        <field name="name">attendance.sync.log.list</field>
        <field name="model">attendance.sync.log</field>
        <field name="arch" type="xml">
            <list string="Attendance Sync Logs" sample="1">
                <field name="employee_id" optional="show"/>
                <field name="date" optional="show"/>
                <field name="attendance_id" optional="show"/>
                <field name="queue_name" optional="show"/>
                <field name="data" optional="show"/>
                <field name="type" optional="show"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'success'"
                       decoration-info="state == 'new'" decoration-danger="state == 'fail'"/>
            </list>
        </field>
    </record>

    <record id="view_attendance_sync_log_form" model="ir.ui.view">
        <field name="name">attendance.sync.log.form</field>
        <field name="model">attendance.sync.log</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Retry" name="action_retry_sync" invisible="state == 'success'" type="object"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="employee_id"/>
                            <field name="attendance_id"/>
                        </group>
                        <group>
                            <field name="type"/>
                            <field name="queue_name" readonly="True"/>
                            <field name="data"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <data>

        <menuitem id="rabbitmq_attendance_sync_menu_item"
                  action="rabbitmq_attendance_sync.action_attendance_sync_log_view"
                  parent="rabbitmq_attendance_sync.rabbitmq_attendence_sync_menu_root"
                  name="Attendance Records" sequence="10"/>
    </data>
</odoo>