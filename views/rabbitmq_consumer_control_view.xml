<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_rabbitmq_consumer_controller_search" model="ir.ui.view">
        <field name="name">rabbitmq.consumer.controller.search</field>
        <field name="model">rabbitmq.consumer.controller</field>
        <field name="arch" type="xml">
            <search string="Search Consumer">
                <field name="name"/>
                <field name="queue"/>
                <field name="exchange"/>
                <separator/>
                <filter name="exchange_type" string="Direct" domain="[('exchange_type', '=', 'direct')]"/>
                <filter name="exchange_type" string="Topic" domain="[('exchange_type', '=', 'topic')]"/>
                <filter name="exchange_type" string="Fanout" domain="[('exchange_type', '=', 'fanout')]"/>
                <filter name="exchange_type" string="Header" domain="[('exchange_type', '=', 'header')]"/>
                <separator/>
                <filter name="state" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="state" string="Stop" domain="[('state', '=', 'stop')]"/>
                <filter name="state" string="Running" domain="[('state', '=', 'running')]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Exchange Type" name="exchange_type" domain="[]"
                            context="{'group_by': 'exchange_type'}"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_rabbitmq_consumer_control_view" model="ir.actions.act_window">
        <field name="name">Rabbit MQ Consumer</field>
        <field name="res_model">rabbitmq.consumer.controller</field>
        <field name="search_view_id" ref="rabbitmq_model_sync.view_rabbitmq_consumer_controller_search"/>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a rabbit mq consumer
            </p>
        </field>
    </record>
    <record id="view_rabbitmq_consumer_control_kanban" model="ir.ui.view">
        <field name="name">rabbitmq.consumer.control.kanban</field>
        <field name="model">rabbitmq.consumer.controller</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="queue"/>
                <field name="exchange"/>
                <field name="exchange_type"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card shadow rounded bg-white p-3">
                            <div class="d-flex justify-content-end mb-2">
                                <t t-if="record.state.raw_value == 'running'">
                                    <i class="fa fa-cog fa-spin text-success" style="font-size: 3rem;"
                                       title="Running"></i>
                                </t>
                                <t t-if="record.state.raw_value == 'stop'">
                                    <i class="fa fa-cog text-danger" style="font-size: 3rem;"
                                       title="Stopped"></i>
                                </t>
                                <t t-if="record.state.raw_value == 'draft'">
                                    <i class="fa fa-cog text-secondary" style="font-size: 3rem;"
                                       title="Draft"></i>
                                </t>
                            </div>
                            <div class="mb-2">
                                <h4 class="mb-1 text-primary d-flex justify-content-between align-items-center">
                                    <span>
                                        <t t-esc="record.name.value"/>
                                    </span>
                                    <span class="text-muted" style="font-size: 0.8rem;">
                                        <t t-esc="record.queue.value"/>
                                    </span>
                                </h4>

                            </div>
                            <div class="border-top pt-2">
                                <p>
                                    <strong>Exchange :</strong>
                                    <t t-esc="record.exchange.value"/>
                                </p>
                                <p>
                                    <strong>Exchange Type :</strong>
                                    <t t-esc="record.exchange_type.value"/>
                                </p>
                            </div>
                            <div class="mt-3 d-flex justify-content-between">
                                <button name="action_start_consumer" type="object"
                                        class="btn btn-outline-success btn-lg"
                                        t-if="record.state.raw_value != 'running'">
                                    <i class="fa fa-play mr-1"/>
                                    Start
                                </button>
                                <button name="action_stop_consumer" type="object"
                                        class="btn btn-outline-danger btn-lg"
                                        t-if="record.state.raw_value == 'running'">
                                    <i class="fa fa-stop mr-1"/>
                                    Stop
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_rabbitmq_cosumer_control_form" model="ir.ui.view">
        <field name="name">rabbitmq.consumer.control.form</field>
        <field name="model">rabbitmq.consumer.controller</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <button name="action_start_consumer" type="object"
                            string="Start Consumer"
                            class="btn btn-success"
                            invisible="state == 'running'"/>
                    <button name="action_stop_consumer" type="object"
                            string="Stop Consumer"
                            class="btn btn-danger"
                            invisible="state != 'running'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="queue"/>
                            <field name="sync_model"  options="{'no_create': True, 'no_open': True}"/>

                        </group>
                        <group>
                            <field name="exchange"/>
                            <field name="exchange_type"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <data>
        <menuitem
                id="rabbitmq_attendence_sync_menu_root"
                name="Rabbit MQ"
                sequence="50"
                web_icon="rabbitmq_model_sync,static/description/icon.png"
        >
            <menuitem id="rabbitmq_attendance_sync_menu_item_dashboard"
                      action="rabbitmq_model_sync.action_rabbitmq_consumer_control_view"
                      name="Dashboard" sequence="0"/>
        </menuitem>
    </data>
</odoo>
